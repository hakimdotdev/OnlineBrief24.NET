@page
@model OnlineBrief24.Pages.LoginModel
@{

}
<link href="Login.css" rel="stylesheet">
<body class="text-center">
	<div class="modal-dialog" role="document">
		<div class="modal-content rounded-5 shadow">
			<div class="modal-header p-5 pb-4 border-bottom-0">
				<h2 class="fw-bold mb-0">Login</h2>
			</div>

			<div class="modal-body p-5 pt-0">
				<form method="post" asp-page="Login">
					<div class="form-floating mb-3">
						<input type="email" class="form-control rounded-4" id="inputEmail" asp-for="Username" placeholder="name@example.com">
						<label for="inputEmail">E-Mail Adresse</label>
					</div>
					<div class="form-floating mb-3">
						<input type="password" class="form-control rounded-4" id="inputPassword" asp-for="Password" placeholder="MyS3cvr3P4$$429$&/()">
						<label for="inputPassword">Passwort</label>
					</div>
					@if (@Model.ErrorMessage != null)
					{
						<div class="alert alert-danger" role="alert">
							<center>@Model.ErrorMessage</center>
						</div>
					}
					<button class="w-100 mb-2 btn btn-lg rounded-4 btn-primary" type="submit" value="Login" asp-page-handler="Login">Einloggen</button>

				</form>
			</div>
		</div>
	</div>
</body>